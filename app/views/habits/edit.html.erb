<%= render "shared/header" %>

<div class="container">
  <h2>習慣編集</h2>

  <%= form_with model: @habit, local: true do |form| %>
    <div class="form-group">
      <%= form.label :habit_name, "習慣名" %>
      <%= form.text_field :habit_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_day, "開始日" %>
      <%= form.datetime_select :start_day, class: "form-control", data: { controller: "flatpickr" } %>
    </div>


    <div class="form-group">
      <%= form.submit "更新する", class: "btn-submit" %>
    </div>
  <% end %>
</div>