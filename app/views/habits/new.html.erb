<%= render "shared/header" %> 

<div class="container">
  <h2>習慣新規作成</h2>
  <%= form_with model: @habit, local: true do |form| %>
    <div class="form-group">
      <%= form.label :habit_name, "習慣名" %>
      <%= form.text_field :habit_name, class: "form-control" %>
    </div>

     <div class="form-group">
      <%= form.label :start_day, "開始日" %>
      <%= form.datetime_select :start_day, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= form.submit "登録する", class: "btn-submit" %>
    </div>
  <% end %>
</div>