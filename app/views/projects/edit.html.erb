<%= render "shared/header" %>

<div class="container">
  <h2>プロジェクト編集</h2>

  <%= form_with model: @project, local: true do |form| %>
    <div class="form-group">
      <%= form.label :project_name, "プロジェクト名" %>
      <%= form.text_field :project_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_day, "開始日" %>
      <%= form.datetime_select :start_day, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :schedule_end_day, "終了予定日" %>
      <%= form.datetime_select :schedule_end_day, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :end_day, "実際の終了日（任意）" %>
      <%= form.datetime_select :end_day, include_blank: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :memo, "メモ" %>
      <%= form.text_area :memo, class: "form-control", rows: 4 %>
    </div>

    <div class="form-group">
      <%= form.submit "更新する", class: "btn-submit" %>
    </div>
  <% end %>
</div>