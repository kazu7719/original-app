<%= render "shared/header" %> 

<div class="container">
  <h2>タスク新規作成</h2>
  <%= form_with model: @task, local: true do |form| %>
    <div class="form-group">
      <%= form.label :task_name, "タスク名" %>
      <%= form.text_field :task_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_day, "開始日" %>
      <%= form.datetime_select :start_day, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :schedule_end_day, "終了予定日" %>
      <%= form.datetime_select :schedule_end_day, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :end_day, "実際の終了日" %>
      <%= form.datetime_select :end_day, class: "form-control", include_blank: true %>
    </div>

    <div class="form-group">
      <%= form.submit "登録する", class: "btn-submit" %>
    </div>
  <% end %>
</div>